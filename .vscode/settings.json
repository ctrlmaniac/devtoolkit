{
	// General setting: Format code on save if a formatter is available.
	"editor.formatOnSave": true,

	// Ensure Google Gemini Code Assist is enabled for this workspace.
	// While this is often the default when the extension is installed,
	// setting it explicitly can be useful for workspace-specific configurations.
	"google.gemini.enableCodeAssist": true,

	// Note: The 'EditorConfig.EditorConfig' extension works by reading an
	// '.editorconfig' file in your project root. Ensure one is present
	// for consistent editor settings across different editors and IDEs.

  // Shell scripts
  "shellcheck.enable": true,
  "shellcheck.useWorkspaceRootAsCwd": true,
  "shellcheck.customArgs": ["-x"],
  "shellcheck.run": "onType",
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  }
}
